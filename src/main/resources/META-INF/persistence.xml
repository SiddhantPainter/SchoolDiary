<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">

    <persistence-unit name="schoolDiaryData">
        <jta-data-source>schoolDiaryDatabase</jta-data-source>
        <non-jta-data-source>schoolDiaryDatabaseUnmanaged</non-jta-data-source>
        <class>org.application.schooldiary.model.Student</class>

        <properties>
            <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(ForeignKeys=true)"/>
        </properties>
    </persistence-unit>
</persistence>